<?xml version="1.0"?>
<!DOCTYPE benchmark PUBLIC "+//IDN sosy-lab.org//DTD BenchExec benchmark 1.18//EN" "https://www.sosy-lab.org/benchexec/benchmark-1.18.dtd">
<benchmark tool="tools.cra"
           displayName="CRA"
           timelimit="15min">
  <rundefinition>
    <option name="-cra" />
    <option name="-cra-split-loops" />
    <tasks name="C4B">
      <include>../tasks/C4B/*.yml</include>
      <propertyfile>../properties/unreach-call.prp</propertyfile>
    </tasks>
    <tasks name="HOLA">
      <include>../tasks/HOLA/*.yml</include>
      <propertyfile>../properties/unreach-call.prp</propertyfile>
    </tasks>
    </rundefinition>
    <rundefinition>
    <option name="-cra" />
    <tasks name="recursive-safe">
      <includesfile>../tasks/recursive-safe.set</includesfile>
      <propertyfile>../tasks/properties/unreach-call.prp</propertyfile>
    </tasks>
    <tasks name="recsimp-safe">
      <includesfile>../tasks/recsimp-safe.set</includesfile>
      <propertyfile>../tasks/properties/unreach-call.prp</propertyfile>
    </tasks>
    <tasks name="cfg-crafted">
      <includesfile>../tasks/cfg-crafted.set</includesfile>
      <propertyfile>../tasks/properties/unreach-call.prp</propertyfile>
    </tasks>
    </rundefinition>
</benchmark>
